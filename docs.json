{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "eigi.ai Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "openapi": ["api-reference/openapi.json"],
  "api": {
    "baseUrl": "https://prod.eigi.ai/v1",
    "auth": {
      "method": "key",
      "name": "X-API-Key"
    },
    "playground": {
      "mode": "show"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "essentials/platform-terminology",
              "essentials/supported-providers"
            ]
          },
          {
            "group": "Platform Features",
            "pages": [
              "features/agent-builder",
              "features/prompt-management",
              "features/call-management",
              "features/call-analysis",
              "features/phonebook",
              "features/tools-integrations",
              "features/widget-chat",
              "features/notifications",
              "features/scaling-performance"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "essentials/prompting-guide",
              "essentials/voice-profiles",
              "essentials/video-avatars",
              "essentials/web-widget"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Conversations",
            "pages": [
              "api-reference/public/get-conversation",
              "api-reference/public/list-conversations",
              "api-reference/public/outbound-call"
            ]
          },
          {
            "group": "Chat",
            "pages": [
              "api-reference/public/chat-send-message",
              "api-reference/public/chat-list-sessions",
              "api-reference/public/chat-get-session",
              "api-reference/public/chat-first-message"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://eigi.ai",
          "icon": "grid"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@eigi.ai",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/eigi-light.png",
    "dark": "/logo/eigi-dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact Support",
        "href": "mailto:support@eigi.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Login to Dashboard",
      "href": "https://eigi.ai"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/eigi_ai",
      "linkedin": "https://linkedin.com/company/eigi-ai"
    }
  }
}
